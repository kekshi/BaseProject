        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="start"
        android:visibility="visible" />

    <com.kekshi.baseproject.widget.zdyview.MyPointView
        android:id="@+id/pointView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <com.kekshi.baseproject.widget.zdyview.BeiSaiErView
        android:id="@+id/beiSaiEr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <com.kekshi.baseproject.widget.zdyview.XfermodeView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <com.kekshi.baseproject.widget.CollapsedTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
