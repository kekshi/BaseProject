<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.kekshi.baseproject.widget.zdyview.RegionView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <com.kekshi.baseproject.widget.zdyview.BianHuanView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <com.kekshi.baseproject.widget.zdyview.DrawTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <Button
        android:id="@+id/btnResetBeiSaiEr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="start"
        android:visibility="gone" />

    <com.kekshi.baseproject.widget.zdyview.MyPointView
        android:id="@+id/pointView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <com.kekshi.baseproject.widget.zdyview.BeiSaiErView
        android:id="@+id/beiSaiEr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <com.kekshi.baseproject.widget.zdyview.XfermodeView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <com.kekshi.baseproject.widget.zdyview.RedPointView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <com.kekshi.baseproject.widget.CollapsedTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@android:color/white"
        android:text="咨询按钮：点击为复制微信按钮\n
        咨询按钮：点击为复制微信按钮\n
        咨询按钮：点击为复制微信按钮\n
        咨询按钮：点击为复制微信按钮\n
        咨询按钮：点击为复制微信按钮\n
        咨询按钮：点击为复制微信按钮\n
        咨询按钮：点击为复制微信按钮\n
        咨询按钮：点击为复制微信按钮\n
        咨询按钮：点击为复制微信按钮\n
        咨询按钮：点击为复制微信按钮\n
咨询按钮：点击为复制微信按钮"
        android:visibility="gone"
        app:collapsedDrawable="@mipmap/icon_arrow_cyan_up_solid"
        app:collapsedText="收起"
        app:expandedDrawable="@mipmap/icon_arrow_cyan_down_solid"
        app:expandedText="展开"
        app:tipsColor="@color/black" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:orientation="horizontal" />

    <com.kekshi.baseproject.widget.zdyview.DiscussionAvatarView
        android:id="@+id/da_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:isLastComplete="false"
        app:maxCount="6"
        app:radius="25dp"
        app:space="0.5" />

    <!-- seekbar option 6 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:visibility="gone">

        <com.kekshi.baselib.view.CrystalRangeSeekbar
            android:id="@+id/rangeSeekbar6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textMin6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rangeSeekbar6"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:text="0"
            android:textColor="#000"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/textMax6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rangeSeekbar6"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:text="0"
            android:textColor="#000"
            android:textSize="16dp" />
    </RelativeLayout>

    <com.kekshi.baseproject.widget.zdyview.RoundView
        android:layout_width="300dp"
        android:layout_height="300dp"/>
</LinearLayout>