<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.kekshi.baseproject.widget.expandable.ExpandableTextView
        android:id="@+id/tv_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="4dp"
        android:padding="15dp"
        android:textSize="12sp"
        app:ep_collapsed_drawable="@mipmap/icon_arrow_cyan_up_solid"
        app:ep_expand_color="@color/black"
        app:ep_expand_drawable="@mipmap/icon_arrow_cyan_down_solid"
        app:ep_need_always_showright="true"
        app:ep_need_contract="true"
        app:ep_need_expand="true"
        app:ep_need_link="false"
        app:ep_need_mention="false" />

</androidx.constraintlayout.widget.ConstraintLayout>