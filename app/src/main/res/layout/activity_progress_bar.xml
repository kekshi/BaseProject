<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cpbv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.kekshi.baselib.view.CircleProgressBarView
        android:id="@+id/circleProgressBarView"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        cpbv:centerProgressTextColor="@color/colorAccent"
        cpbv:centerProgressTextSize="20sp"
        cpbv:circleBgStrokeWidth="10dp"
        cpbv:isDrawCenterProgressText="true"
        cpbv:progressStrokeWidth="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher_round" />

        <com.kekshi.baselib.view.HorizontalProgressBar
            android:id="@+id/horizontalProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp" />
    </LinearLayout>

    <com.kekshi.baselib.view.ProductProgressBar
        android:id="@+id/productProgressBar"
        android:padding="10dp"
        android:background="@color/white"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />
</LinearLayout>